<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="travelMatePU" transaction-type="JTA">
        <jta-data-source>jdbc/TravelMateDS</jta-data-source>

        <class>org.travelmate.model.DestinationCategory</class>
        <class>org.travelmate.model.Trip</class>
        <class>org.travelmate.model.User</class>

        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>

            <!-- Disable automatic Bean Validation by JPA - we validate in JSF layer -->
            <property name="jakarta.persistence.validation.mode" value="NONE"/>
        </properties>
    </persistence-unit>

</persistence>

